<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="833dp"
        android:layout_height="493dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/studio" />

    <ImageButton
        android:id="@+id/bass_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="9dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guitar_image_button"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bass" />

    <ImageButton
        android:id="@+id/cymbal1_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/tom1_image_button"
        app:layout_constraintTop_toTopOf="@+id/tom1_image_button"
        app:srcCompat="@drawable/cymbal1" />

    <ImageButton
        android:id="@+id/tom2_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="81dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/tom3_image_button"
        app:layout_constraintEnd_toEndOf="@+id/tom3_image_button"
        app:srcCompat="@drawable/tom2" />

    <ImageButton
        android:id="@+id/cymbal2_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="95dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/tom3_image_button"
        app:layout_constraintStart_toEndOf="@+id/tom3_image_button"
        app:srcCompat="@drawable/cymbal2" />

    <ImageButton
        android:id="@+id/hihat_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="33dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/snare_image_button"
        app:srcCompat="@drawable/hihat" />

    <ImageButton
        android:id="@+id/snare_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/bass_image_button"
        app:layout_constraintTop_toTopOf="@+id/bass_image_button"
        app:srcCompat="@drawable/snare" />

    <ImageButton
        android:id="@+id/tom3_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/cymbal3_image_button"
        app:layout_constraintStart_toEndOf="@+id/bass_image_button"
        app:layout_constraintTop_toTopOf="@+id/cymbal3_image_button"
        app:srcCompat="@drawable/tom3" />

    <ImageButton
        android:id="@+id/cymbal3_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tom3_image_button"
        app:layout_constraintTop_toBottomOf="@+id/guitar_image_button"
        app:srcCompat="@drawable/cymbal3" />

    <ImageButton
        android:id="@+id/tom1_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginBottom="14dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/snare_image_button"
        app:layout_constraintStart_toStartOf="@+id/snare_image_button"
        app:srcCompat="@drawable/tom1" />

    <ImageButton
        android:id="@+id/guitar_image_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="241dp"
        android:layout_marginBottom="1dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/cymbal3_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bass_image_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/guitar" />

</androidx.constraintlayout.widget.ConstraintLayout>